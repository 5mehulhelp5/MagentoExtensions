<?xml version="1.0"?>
<config>
  <sections>
    <design>
      <groups>
        <theme_switcher translate="label">
          <label>Themes Switcher</label>
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <allowed_themes translate="label">
              <label>Allowed Themes</label>
              <frontend_type>multiselect</frontend_type>
              <source_model>themeswitch/source_themes</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment><![CDATA[Select themes that should be available for preview on front end.]]></comment>
            </allowed_themes>
            <in_block>
              <label>Choose switcher block</label>
              <frontend_type>select</frontend_type>
              <source_model>themeswitch/source_blocks</source_model>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment><![CDATA[Choose in which block should switcher appear.]]></comment>
            </in_block>
            <class_name>
              <label>Switcher css class name</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment><![CDATA[Switcher class name (for styling).]]></comment>
            </class_name>
          </fields>
        </theme_switcher>
      </groups>
    </design>
  </sections>
</config>
