<?xml version="1.0"?>
<config>
	  <tabs>
		<mehulchaudhari translate="label" module="popularity">
            <label>MehulChaudhari</label>
            <sort_order>0</sort_order>
        </mehulchaudhari>
	  </tabs>
	  <sections>
		<popularity  translate="label" module="popularity">                    
		<label>Popularity</label>
		<tab>mehulchaudhari</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
				      <general translate="label"> 
					  <label>General</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>0</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <enable translate="label">
                            <label>Enable in Product View</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Display in Product page.</comment>
                          </enable>
                          <category_enable translate="label">
                            <label>Enable in Category View</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Display in category page on product list.</comment>
                          </category_enable>
						  <product_review translate="label">
						     <label>Enable in Product Review</label>
                             <frontend_type>select</frontend_type>
                             <source_model>adminhtml/system_config_source_yesno</source_model>
                             <sort_order>2</sort_order>
                             <show_in_default>1</show_in_default>
                             <show_in_website>1</show_in_website>
                             <show_in_store>1</show_in_store>
							 <comment>Display in product review page.</comment>
						  </product_review>
						  
						  <compare_enable translate="label">
                            <label>Enable in Product Compare View</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Display in product compare page.</comment>
                          </compare_enable>
                          <rating translate="label">
                            <label>Include Rating</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Product Review Count is include or not.</comment>
                          </rating>
						  <review_filter translate="label">
						       <label>Want to set Review filter?</label>
                               <frontend_type>select</frontend_type>
                               <source_model>adminhtml/system_config_source_yesno</source_model>
                               <sort_order>5</sort_order>
                               <show_in_default>1</show_in_default>
                               <show_in_website>1</show_in_website>
                               <show_in_store>1</show_in_store>
							   <depends><rating>1</rating></depends>
							   <comment>No = All Reviews are taken.</comment>
						  </review_filter>
						  <percent translate="label">
						       <label>Percentage</label>
                               <frontend_type>text</frontend_type>
                               <sort_order>6</sort_order>
                               <show_in_default>1</show_in_default>
                               <show_in_website>1</show_in_website>
                               <show_in_store>1</show_in_store>
							   <depends><review_filter>1</review_filter></depends>
							   <tooltip><![CDATA[When you define percentage in this field the review count only taken according to this percentage like 
							   if you set 50 in this field only those reviews counts will be taken which value is above 50% so only good reviews.]]></tooltip>
							   <comment>Here you have set a percentage of review. By default it will take "50%".</comment>
						  </percent>
                          <view translate="label">
                            <label>Include Views</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Product View count is include or not.</comment>
                          </view>
                          <sell translate="label">
                            <label>Include Sells</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Product Sells count include or not.</comment>
                          </sell>
                          <design translate="label">
                            <label>Design</label>
                            <frontend_type>select</frontend_type>
                            <source_model>popularity/system_config_source_design</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Select Design Of your popularity Block.</comment>
                          </design>
                          <step translate="label">
                            <label>Step Of Popularity</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If you dont set this field it will take "250" default value. </comment>
                          </step>
					   </fields>
					   </general>
					</groups>
		</popularity>
	  </sections>
</config>
