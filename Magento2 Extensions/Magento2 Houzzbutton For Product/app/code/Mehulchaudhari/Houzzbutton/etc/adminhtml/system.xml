<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
         <tab id="mehulchaudhari" translate="label" sortOrder="9999991">
            <label>Mehul Chaudhari</label>
         </tab>
         <section id="houzzbutton" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Houzzbutton</label>
            <tab>mehulchaudhari</tab>
            <resource>Mehulchaudhari_Houzzbutton::config_houzzbutton</resource>
            <group id="general" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Setting</label>
                <field id="enable" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable Disable Extension</comment>
                </field>
                <field id="name" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Button Name</label>
                    <comment>Your Button Name</comment>
                </field>
                <field id="hzid" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Houzz Id</label>
                    <comment>Your Houzz ID</comment>
                </field>
                <field id="count" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Count</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
                </field>
            </group>
       </section>
    </system>
</config>
